<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:elevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/examRecViewFild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <TextView
            android:id="@+id/a2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:hint="Course Teacher Name"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/a3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a2"
            android:layout_alignStart="@+id/a2"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:hint="Designation"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/a4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a3"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/zz3"
            android:hint="Department"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/a5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a4"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/zz2"
            android:hint="Email"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/a6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a5"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/zz1"
            android:hint=" none"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/zz3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/a3"
            android:layout_alignStart="@+id/a3"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Dept. of "
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/zz2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zz3"
            android:layout_alignStart="@+id/zz3"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="E-mail: "
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/zz1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/zz2"
            android:layout_alignStart="@+id/zz2"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Call :"
            android:textColor="#000000"
            android:textSize="15dp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>