<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:elevation="3dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/courseTitleForTeacherClassSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:hint="Course Name"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dayTextForTeacherClassSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseTitleForTeacherClassSchedule"
            android:layout_alignStart="@+id/courseTitleForTeacherClassSchedule"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:hint="Day Fild"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/dayText2ForTeacherClassSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseTitleForTeacherClassSchedule"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/dayTextForTeacherClassSchedule"
            android:text=",  ("
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/startTimeFildForTeacherClassSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseTitleForTeacherClassSchedule"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/dayText2ForTeacherClassSchedule"
            android:hint="Start Time"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/startTimeFild2ForTeacherClassSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseTitleForTeacherClassSchedule"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/startTimeFildForTeacherClassSchedule"
            android:text="-"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/endTimeFildForTeacherClassSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseTitleForTeacherClassSchedule"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/startTimeFild2ForTeacherClassSchedule"
            android:hint="End Time"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/endTimeFild2ForTeacherClassSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/courseTitleForTeacherClassSchedule"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/endTimeFildForTeacherClassSchedule"
            android:text=")"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/roomFildForTeacherClassSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dayTextForTeacherClassSchedule"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/roomFild2ForTeacherClassSchedule"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/roomFildForTeacherClassSchedule3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roomFildForTeacherClassSchedule"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/roomFild2ForTeacherClassSchedule3"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/roomFildForTeacherClassSchedule2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roomFildForTeacherClassSchedule"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/roomFild2ForTeacherClassSchedule2"
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/roomFild2ForTeacherClassSchedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dayTextForTeacherClassSchedule"
            android:layout_alignStart="@+id/dayTextForTeacherClassSchedule"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Room No: "
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/roomFild2ForTeacherClassSchedule2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roomFild2ForTeacherClassSchedule"
            android:layout_alignStart="@+id/roomFild2ForTeacherClassSchedule"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:text="Semester: "
            android:textColor="#000000"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/roomFild2ForTeacherClassSchedule3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/roomFildForTeacherClassSchedule"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/roomFildForTeacherClassSchedule2"
            android:text="Section: "
            android:textColor="#000000"
            android:textSize="15dp" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/deleteButton"
            android:layout_alignParentTop="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="0dp"
            android:background="@drawable/ic_baseline_edit_24" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/roomFild2ForTeacherClassSchedule"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/ic_baseline_delete_24" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>